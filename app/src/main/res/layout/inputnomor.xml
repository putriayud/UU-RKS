<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FDFBFB"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backk"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/judul1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#19030D"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:text="Verifikasi nomor Anda"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/verif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Chat Me akan mengirim pesan SMS untuk"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/verif1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verif"
        android:layout_centerHorizontal="true"
        android:text="memverifikasikan nomor telepon Anda."
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/verif2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verif1"
        android:layout_centerHorizontal="true"
        android:text="Masukkan nomor telepon Anda :"
        android:textSize="20sp"/>

    <RelativeLayout
        android:id="@+id/nohp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_below="@id/verif2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FDF9F9"
            android:layout_margin="5dp"
            android:textSize="28sp"
            android:text="Masukkan Nomor Telepon"/>
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nohp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:backgroundTintMode="src_in"
        android:text="Lanjut"
        android:textSize="20sp" />
</RelativeLayout>