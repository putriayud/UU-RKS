<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD">

    <Button
        android:id="@+id/back2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backk"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Info Profil"
        android:textColor="#19030D"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Mohon berikan nama dan foto"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info1"
        android:layout_centerHorizontal="true"
        android:text="(opsional) Anda"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/profil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/info2"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/icon"/>
    <RelativeLayout
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_below="@id/info2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:background="#FDF9F9"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:text="Masukkan Nama Anda"/>
    </RelativeLayout>
    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:backgroundTintMode="src_in"
        android:text="Lanjut"
        android:textSize="20sp" />
</RelativeLayout>