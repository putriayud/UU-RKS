<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF6F6">

    <Button
        android:id="@+id/back1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/backk"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Verifikasi"
        android:textColor="#19030D"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kode1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Masukkan kode verifikasi :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/kode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_below="@id/kode1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="#F4F0F0"
            android:layout_margin="5dp"
            android:textSize="30sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pesan"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/kode2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/pesan" />

    <TextView
        android:id="@+id/pesan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kode2"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:text="Kirim Ulang SMS"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/pesan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kode2"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="50dp"
        android:text="1.00"
        android:textSize="15sp" />

    <View
        android:id="@+id/garis"
        android:layout_width="340dp"
        android:layout_height="2dp"
        android:layout_below="@id/pesan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#A15454"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/tele"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/garis"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/tele" />

    <TextView
        android:id="@+id/tele1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="Panggil Saya"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tele2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="10dp"
        android:text="1.00"
        android:textSize="15sp" />
</RelativeLayout>